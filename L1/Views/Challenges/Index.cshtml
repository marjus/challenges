@model IEnumerable<L1.Models.Challenge>

@{
    ViewData["Title"] = "Uppgávur";
}

<p>
    <a asp-action="Create">Stovna nýggja uppgávu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderInSequence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DifficultyLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOpenForAll)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderInSequence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifficultyLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOpenForAll)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Broyt</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Vísa</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Strika</a>
            </td>
        </tr>
}
    </tbody>
</table>
