@model List<Challenge>

@{
    ViewData["Title"] = "Manglandi ord";
}

<h1>Manglandi ord</h1>

<div class="row">
    <div class="col-md-6">
        <h1 class="text-info">Mangland ord</h1><span class="badge badge-light"></span>
    </div>

    <div class="col-md-6 mt-3">
        <div class="float-right">
            <p>
                <a class="btn btn-outline-info" asp-area="" asp-controller="" asp-action="" data-toggle="modal" data-target="#covidinformation"><i class="fas fa-question"></i> Hjálp</a>
                <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Nýtt</a>
            </p>
        </div>
    </div>
</div>


<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">
                @Html.DisplayNameFor(model => model[0].Name)
            </th>

            <th scope="col">   
            </th>
            <th scope="col">
               
            </th>
            <th scope="col">
               
            </th>
            <th scope="col">
               
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-light">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsOpenForAll)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DifficultyLevel)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-info"><i class="fas fa-edit"></i> Broyt</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-info"><i class="fas fa-trash"></i> X</a>
                </td>
            </tr>
        }
    </tbody>
</table>

